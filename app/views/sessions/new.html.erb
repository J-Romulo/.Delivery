<h1>Sessions#new</h1>

<%= form_for :session, url: sign_in_path do |form| %>
  <div class="field">
    <%= form.label :email %><br />
    <%= form.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :password %><br />
    <%= form.password_field :password, autocomplete: "off" %>
  </div>
  <div class="actions">
    <%= form.submit "Logar" %>
  </div>
  <p>Novo usuario? <%= link_to "Se inscreva agora!", new_user_path %></p>
<% end %>
