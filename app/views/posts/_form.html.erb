<%= form_with model: @post do |form| %>
  <div>
    <%= form.label :status, "Status" %><br>
    <%= form.select :status, [['Em andamento', :progress], ['ConcluÃ­do', :concluded]] %>
    <% @post.errors.full_messages_for(:status).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <% if logged_in? %>
    <% if isAdmin? %>
      <div>
        <%= form.label :user_id, "Entregador" %><br>
        <%= form.select :user_id, @users.collect {|user| [user.name, user.id]} %>
        <% @post.errors.full_messages_for(:user_id).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <div>
    <%= form.submit button_text %>
  </div>
<% end %>