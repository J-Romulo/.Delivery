<%= link_to "Voltar", @post %>
<h1>Informações venda</h1>
<table>
  <thead>
  <tr>
    <th>Cliente</th>
    <th>Pagamento</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= link_to @client.name, user_address_path(:user_id => @client.id, :delivery => 1)  %></td>
    <td><%= @sale.payment_type %></td>
    <% if logged_in? %>
      <% if isAdmin? %>
        <td><%= link_to "Editar", edit_sale_path(@sale, :post_id => @post.id) %></td>
        <td><%= link_to "Deletar", sale_path(@sale, :post_id => @post.id), method: :delete,
                        data: {confirm: "Você está seguro desta ação?"} %></td>
        <td><%= link_to "Adicionar produto na venda", new_product_path(:sale_id => @sale.id, :post_id => @post.id) %></td>
      <% end %>
    <% end %>
  </tr>
  </tbody>
</table>

<h3>Produtos</h3>
  <ul>
    <% @products.each do |product| %>
      <li>
        <%= link_to product.name, product_path(product, :sale_id => @sale.id, :post_id => @post.id) %>
        <%= product.quantity_product %> unidades
        <% @totalPrice += (product.price - product.discount ) * product.quantity_product %>
      </li>
    <% end %>
  </ul>
<p><%= "Preço total: #{@totalPrice}" %></p>