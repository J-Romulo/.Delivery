<%= link_to "Voltar", :back %>
<h1>Listagem de vendas</h1>
<%= link_to "Adicionar venda", new_sale_path %>
<table>
  <thead>
  <tr>
    <th>Nome do cliente</th>
    <th>Pagamento</th>
  </tr>
  </thead>
  <tbody>
  <% @sales.each do |sale| %>
    <tr>
      <td><%= link_to sale.client_name, sale %></td>
      <td><%= sale.payment_type %></td>
      <td><%= sale.id  %></td>
    </tr>
  <% end %>
  </tbody>
</table>